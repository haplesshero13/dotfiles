# cd
alias ..='cd ..'
alias h='cd $HOME'
alias d='cd $HOME/.dotfiles'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias lsl="ls -l"
alias la='ls -A'

# prompt
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# git
alias g='git'
alias ga='git add'
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# hg
alias h='hg'
alias ha='hg add'
alias hl='hg pull -u'
alias hp='hg push'
alias hd='hg diff'
alias hc='hg commit'
alias hcm='hg commit -m'
alias hs='hg status'

# cvs
alias c='cvs'
alias ca='cvs add'
alias cu='cvs update'
alias ccm='cvs commit -m'
alias cs='cvs status'
alias cvd='cvs diff'

# common
alias duh='du -h --max=1'
alias vi='vim'
