# cd
alias ..='cd ..'
alias h='cd $HOME'
alias d='cd $HOME/.dotfiles'

# sudo
alias si='sudo -i'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias lsl="ls -l"
alias la='ls -A'

# prompt
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# git
alias g='git'
alias ga='git add'
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# hg
alias hga='hg add'
alias hgl='hg pull -u'
alias hgp='hg push'
alias hgd='hg diff'
alias hgc='hg commit'
alias hgcm='hg commit -m'
alias hgs='hg status'
alias hgu='hg update'
alias hgm='hg merge'
alias hgb='hg branch'

# cvs
alias c='cvs'
alias ca='cvs add'
alias cu='cvs update'
alias ccm='cvs commit -m'
alias cs='cvs status'
alias cvd='cvs diff'

# common
alias space='du -ms * .[^\.]* | sort -nr | less -i'
alias vi='vim'
